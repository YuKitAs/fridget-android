<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="#cdfeed">

        <RelativeLayout
            android:id="@+id/rootRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:background="@drawable/fridge_face"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/menu_button" />

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/back_button" />

            <RelativeLayout
                android:layout_width="322dp"
                android:layout_height="308dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="23dp">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/commonsregular"
                    android:text="Title: "
                    android:textColor="#000000"
                    android:textSize="25sp" />


                <EditText
                    android:id="@+id/enterTitle"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/commonsregular"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="292dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/contentBox"
                    android:layout_marginStart="3dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/commonsregular"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/title"
                    android:fontFamily="@font/commonsregular"
                    android:text="Content: "
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <View
                    android:id="@+id/contentBox"
                    android:layout_width="296dp"
                    android:layout_height="37dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/content"
                    android:background="#7beeff" />

                <View
                    android:id="@+id/contentBox2"
                    android:layout_width="296dp"
                    android:layout_height="171dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/content"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/box" />

                <View
                    android:id="@+id/contentBox3"
                    android:layout_width="297dp"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/content"
                    android:background="@drawable/box" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/content"
                    android:layout_marginStart="29dp"
                    android:fontFamily="@font/commonsregular"
                    android:text="B"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/content"
                    android:layout_marginStart="118dp"
                    android:fontFamily="@font/commonsregular"
                    android:text="I"
                    android:textSize="15sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/content"
                    android:layout_marginEnd="55dp"
                    android:fontFamily="@font/commonsregular"
                    android:text="U"
                    android:textSize="15sp"
                    android:textStyle="" />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>